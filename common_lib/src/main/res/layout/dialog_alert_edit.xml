<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_alert_dialog_bg"
    android:layout_width="340dp"
    android:layout_height="160dp"
    android:background="@drawable/bac_white_one"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_alert_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/colorFirstFont"
        android:text="设置备注名称"
        android:textSize="16sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可设置7个字"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/edt_alert_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@null"
        android:digits="0123456789."
        android:shadowRadius="0.0"
        android:lines="1"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:maxLength="18"
        android:textColor="#000000"
        android:textSize="15sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/btn_alert_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/colorThirdFont"
            android:textSize="14sp"
            android:text="取消"/>

        <ImageView
            android:id="@+id/img_alert_dialog_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/alert_dialog_line"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_alert_dialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/bottom_menu_btn_selector"
            android:gravity="center"
            android:textColor="@color/colorMinorSecnondOrange"
            android:textSize="14sp"
            android:text="确认" />
    </LinearLayout>

</LinearLayout>